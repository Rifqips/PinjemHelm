<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.rifqips.pinjemhelm">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PinjemHelm">

        <activity android:name=".HomeActivity" />
        <activity android:name=".RecoveryActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity">
         <activity android:name=".activity.SplashScreenActivity">
        <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
         </activity>
        </activity>
        <activity android:name=".activity.RecoveryActivity"
            android:parentActivityName=".activity.LoginActivity"></activity>
    </application>

</manifest>